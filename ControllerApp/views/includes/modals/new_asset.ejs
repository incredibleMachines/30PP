<section class="new_asset modal fade" id="new_asset_modal" tabindex="-1" role="dialog" aria-labelledby="new_asset_modal" aria-hidden="true" >
	<section class="modal-dialog">
    	<section class="modal-content">
	    	<div class="modal-header">
	    		<h3>Add New Asset</h3>
	    	</div> <!--modal-header -->
		    <form class="modal-body" role="form" action="/files" method="post" enctype="multipart/form-data" oninput="duration_view.value=duration.value+' seconds'">
		    		<section class="form-group">
					    <label for="title">Asset Title</label>
					    <input type="text" class="form-control" name="title" placeholder="Enter title">
				    </section>
			  		<section class="form-group content-upload">
					    <label for="content">Content Upload</label>
					    <input type="file" class="form-control" name="content"/>
				    	<p class="help-block">Select the {file} to upload</p>
				    </section>
					<section class="form-group">
						<label for="Location">Location <small>(if applicable)</small></label>
						<select name="location" class="form-control">
							<option>Location</option>
							<option>Location</option>
							<option>Location</option>
						</select>
						<p class="help-block">...or enter a new location</p>
						<input type="input" name="new_location" class="form-control" placeholder="Enter New Location (optional)"/>
					</section>
		    </form>
			<div class="modal-footer">
			    	<button class="btn btn-default" type="button" data-dismiss="modal">Close</button>
					<button class="btn btn-primary modal-submit" type="button">Submit</button>
			</div>
    	</section> <!--modal-content -->
	</section> <!--modal-dialog -->
</section>
