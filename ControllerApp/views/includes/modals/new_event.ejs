<section class='new_event modal fade' id="new_event_modal" tabindex="-1" role="dialog" aria-labelledby="new_event_modal" aria-hidden="true" >
	<section class="modal-dialog">
    	<section class="modal-content">
	    	<div class="modal-header">	
		    	<h3>Add New Event</h3>
		    	</div>
		    	
			    <form class="modal-body" role="form" action="/events" method="post" oninput="duration_view.value=duration.value+' seconds'">
				    <section class="form-group col-md-8">
					    <label for="title">Event Title</label>
					    <input type="text" class="form-control" id="title" name="title" placeholder="Give your event a title">
				    </section>
				    <section class="form-group col-md-8">
					    <label for="title">Animation Type</label>
							<select class="form-control" name="anim_type">
							<% for(var i =0; i<4;i++){ %>
								<option value="anim_<%= i %>">Animation <%= i %></option>
							<% }%>
						</select>
						<!--<p class="help-block">Select the animation type.</p>-->
				    </section>
				</form>
				<div class="modal-footer">
					<button class="btn btn-primary modal-submit green" type="button">Submit</button>
			    		<button class="btn btn-default" type="button" data-dismiss="modal">Cancel</button>
					
				</div>
	    	</section>
    	</section>
</section><!-- #new_event_modal .new_event .modal .fade-->
